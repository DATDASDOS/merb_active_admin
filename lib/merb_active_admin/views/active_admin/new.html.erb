<h1>New <%= @model.to_s %></h1>

<form name="new_<%= @model.to_s.downcase %>" action="<%= active_admin_url(:create) %>" method="post">
  <table class="active_admin_object_form">
    <%- @model.columns.reject{ |c| @model.primary_key == c }.each do |col| -%>
    <tr>
      <td class="active_admin_object_key"><%= underscored_to_human_readable(col) %></td>
      <td class="active_admin_object_value">
        <%- case column_type(@model, col) -%>
        <%- when :integer -%>
          <input type="text" name="object[<%= col %>]" value="" size="5">
        <%- when :string -%>
          <input type="text" name="object[<%= col %>]" value="" size="20">
        <%- when :text -%>
          <textarea name="object[<%= col %>]" rows="8" cols="20"></textarea>
        <%- else -%>
          <input type="text" name="object[<%= col %>]" value="" size="20">
        <%- end -%>
      </td>
    </tr>
    <%- end -%>
  </table>
  <div class="active_admin_submit"><input type="submit" name="submit" value="Create" /></div>
</form>

<%- throw_content :for_sidebar do -%>
<div class="sidebar_top">
  <dl class="sidebar_bottom">
    <dt>Actions</dt>
    <dd><a href="#" onclick="history.go(-1); return false">Cancel</a></dd>
  </dl>
</div>
<%- end -%>
